@model RegisterEmployeeFormModel

@{
    ViewData["Title"] = "Employee Registration Form";
}

<div class="row">
    <div class="offset-lg-1 col-lg-7 offset-md-1 col-md-9 col-sm=6">
        <h2 class="heading-margin text-center">New Employee Registration Form</h2>

        <form method="post">

            <div class="form-group">
                <label asp-for="FullName"></label>
                <input asp-for="FullName" class="form-control">
                <span asp-validation-for="FullName" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control">
                <span asp-validation-for="Username" class="small text-danger"></span>
            </div>

            <input class="btn btn-secondary float-none " type="submit" value="Register" />
        </form>
    </div>
</div>


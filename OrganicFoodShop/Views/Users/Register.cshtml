@model RegisterFormModel

@{
    ViewData["Title"] = "Registration Form";
}

<div class="row">
    <div class="offset-lg-1 col-lg-7 offset-md-1 col-md-9 col-sm=6">
        <h2 class="heading-margin text-center">New Registration</h2>

        <form method="post">

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control">
                <span asp-validation-for="Email" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password" class="form-control">
                <span asp-validation-for="Password" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" type="password" class="form-control">
                <span asp-validation-for="ConfirmPassword" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control">
                <span asp-validation-for="FirstName" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control">
                <span asp-validation-for="LastName" class="small text-danger"></span>
            </div>

            <input class="btn btn-secondary float-none " type="submit" value="Register" />
        </form>
    </div>
</div>
